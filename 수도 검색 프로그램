#include <stdio.h>
int main() {
	int a, b =0;
	do {
		printf("1. Korea\n");
		printf("2. USA\n");
		printf("3. Japan\n");
		printf("4. China\n");
		printf("number? ");
		scanf("%d", &a);
		printf("\n\n");
		switch(a) {
			case 1:
				printf("Seoul\n\n");
				break;
			case 2:
				printf("Washington\n\n");
				break;
			case 3:
				printf("Tokyo\n\n");
				break;
			case 4:
				printf("Beijing\n\n");
				break;
			default:
				b = 2;
				printf("none\n\n");
				
		}
		}while(b!=2);
		return 0;
	}
		
